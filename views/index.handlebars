<div class="row">
  <center>
    <div class="col-md-4">
      <h3 class="subFont1">Burgers Bob Made</h3>
      <div id="burgersAvailable">
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn devour-button" type="submit">Eat it Louise!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

  <div class="col-md-4">
      <h3 class="subFont">Burgers Louise ate too quickly </h3>
      <div id="alreadyEaten">

        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>